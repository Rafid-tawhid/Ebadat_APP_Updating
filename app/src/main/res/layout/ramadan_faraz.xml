                android:layout_marginLeft="18dp"
                android:drawableStart="@drawable/point"
                android:textAlignment="textStart"
                android:textColor="#FFFFFF"
                android:textSize="13dp">

            </TextView>
            <TextView
                android:layout_width="match_parent"
