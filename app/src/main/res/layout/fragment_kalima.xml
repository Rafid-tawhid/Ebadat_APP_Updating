<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"

    tools:context=".fragments.KalimaFragment">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:src="@drawable/kalima_header"
        android:background="#F6B066"
        >
    </ImageView>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/back_ic"
        android:layout_alignParentLeft="true"
        android:layout_centerInParent="true"
        android:layout_margin="10dp"
        android:paddingLeft="10dp"
        android:id="@+id/bck_btn"
        ></ImageView>
</RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="-8dp"
            android:layout_marginLeft="8dp"
            android:padding="3dp"
            android:layout_marginRight="8dp"
            android:orientation="vertical"
            android:background="@drawable/item_bg2">
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                app:cardCornerRadius="4dp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#28272C"
                    android:id="@+id/kalima1"
                    android:orientation="horizontal"
                    android:weightSum="7"
                    >
                    <TextView

                        android:layout_width="0dp"
                        android:layout_weight="6"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/hind_siliguri_semibold"
                        android:paddingLeft="15dp"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:text="কালেমা তাইয়্যিবাহ"
                        android:textColor="#FDCA85"
                        android:textSize="18sp" />
                    <ImageView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:padding="16dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/arroww"

                        ></ImageView>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                app:cardCornerRadius="4dp"
                >
